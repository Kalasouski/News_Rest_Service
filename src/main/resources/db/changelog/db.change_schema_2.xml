<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Andrei Dydzik" id="3">

        <createTable tableName="refresh_token">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="refresh_pkey"/>
            </column>

            <column name="token" type="VARCHAR">
                <constraints nullable="false"/>
            </column>

            <column name="expiration_date" type="TIMESTAMP WITHOUT TIME ZONE"/>

            <column name="user_id" type="BIGINT" />
        </createTable>

        <addForeignKeyConstraint baseTableName="refresh_token" baseColumnNames="user_id" constraintName="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>